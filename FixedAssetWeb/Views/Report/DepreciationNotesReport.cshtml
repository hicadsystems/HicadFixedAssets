@model FixedAssetWeb.ViewModels.Reports.ReportVM
@using Microsoft.AspNetCore.Http;
@{
    ViewBag.Title = "DepreciationNote";
}
@{
    Layout = null;

}

<!DOCTYPE html>
<html>
<body>
    <h1 style="text-align:center" class="text-center display-4">@Model.Company.comp_name</h1>
    <h3 style="text-align:center">@Model.Company.Address</h3>

    <br />
    <h3 style="text-align:center">REPORTS</h3>
    <h4 style="text-align:center">Depreciation Note</h4>

    <h3>Monthly Journal Report: Produce On @DateTime.Now</h3>
    <table border="2" cellpadding="2" cellspacing="0" width="100%">
        <tr style="text-align:center">
        </tr>

        @foreach (var b in Model.DepreciationNote2)
        {
            <tr>
                <td><span><b>All Lines:</b></span> @b.Class</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>

            <tr>
                <th>Date</th>
                <th>Receipt Number</th>
                <th>Item Description</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Amount</th>
            </tr>

            @foreach (var a in Model.DepreciationNote.Where(x => x.Class == b.Class))
            {
                <tr style="text-align:center">
                    <td> @a.CostStartDate</td>
                    <td> @a.Additions </td>
                    <td> @a.Reclassifications</td>
                    <td> @a.Disposal</td>
                    <td> @a.CostEndDate</td>
                    <td></td>
                    
                </tr>
            }
            
         }

    </table>
</body>
</html>