@model FixedAssetWeb.ViewModels.Reports.ReportVM
@using Microsoft.AspNetCore.Http;
@{
    ViewBag.Title = "PrintassetMovement";
}
@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<body>
    <h1 style="text-align:center" class="text-center display-4">@Model.Company.comp_name</h1>
    <h3 style="text-align:center">@Model.Company.Address</h3>

    <br />
    <h3 style="text-align:center">REPORTS</h3>
    <h4 style="text-align:center">Stock Position</h4>

    <h3>Asset Movement Report: Produce On @DateTime.Now</h3>
    <table border="2" cellpadding="2" cellspacing="0" width="100%">
        <tr style="text-align:left">
            <th>Asset Code</th>
            <th> Asset Description</th>
            <th>Old Location</th>
            <th>New Location</th>
            <th>Movement Date</th>
        </tr>
        @foreach (var a in Model.AssetNovementReport)
        {
            <tr style="text-align:center">
                <td> @a.assetCode </td>
                <td> @a.assetdesc </td>
                <td> @a.oldloc </td>
                <td> @a.newloc </td>
                <td> @a.movedate</td>
            </tr>
        }

        <tr>

            @*<td><span><b>Total</b></span></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td style="text-align:center"><span><b>@Math.Round((decimal)Model.StockPosition.ToList().Sum(x=>x.Value),2)</b></span></td>*@
        </tr>

    </table>

    @*<h6 style="text-align:center">RETRICTED</h6>*@
</body>
</html>
