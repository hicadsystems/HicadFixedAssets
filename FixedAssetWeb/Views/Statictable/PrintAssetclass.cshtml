@model FixedAssetWeb.ViewModels.Reports.ReportVM
@using Microsoft.AspNetCore.Http;
@{
    ViewBag.Title = "PrintAssetclass";
}
@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<body>
    <h1 style="text-align:center" class="text-center display-4">@Model.Company.comp_name</h1>
    <h3 style="text-align:center">@Model.Company.Address</h3>

    <br />
    @*<h3 style="text-align:center">REPORTS</h3>
        <h4 style="text-align:center">Stock Position</h4>*@

    <h3>Business Line Report: Produce On @DateTime.Now</h3>
    <table border="2" cellpadding="2" cellspacing="0" width="100%">
        <tr style="text-align:center">
            <th>Class Code</th>
            <th>Class Description</th>
            <th>Rate</th>
            <th>Method</th>
            <th>Cost Code</th>
            <th>Accum.Depr.Code</th>
            <th>Expenses Code</th>
        </tr>
        @foreach (var a in Model.AssetclassReport)
        {
    <tr style="text-align:center">
        <td> @a.classcode </td>
        <td> @a.classdesc </td>
        <td> @a.Deprrate</td>
        <td> @a.Deprmethod</td>
        <td> @a.Led_cost_code</td>
        <td> @a.Led_accum_depr_code</td>
        <td> @a.Led_exp_code</td>
    </tr>
        }

        <tr>

            @*<td><span><b>Total</b></span></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td style="text-align:center"><span><b>@Math.Round((decimal)Model.StockPosition.ToList().Sum(x=>x.Value),2)</b></span></td>*@
        </tr>

    </table>

    @*<h6 style="text-align:center">RETRICTED</h6>*@
</body>
</html>
